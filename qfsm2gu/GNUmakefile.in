ADDITIONAL_OBJCFLAGS+= OBJCINC -Wno-idiomatic-parentheses
ADDITIONAL_LDFLAGS  += BSDLIB
ADDITIONAL_TOOL_LIBS+= -L/usr/local/lib -Wl,-R/usr/local/lib -lantlr3c

